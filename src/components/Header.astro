---
import memoji from "~/assets/memoji.png";
---

<header class="header">
	<div class="header__leading">
		<img
			class="header__avatar"
			src={memoji.src}
			width={memoji.width}
			height={memoji.height}
			alt=""
		/>
		<div class="header__text">
			<a class="header__name" href="/">Roey Biran</a>
			<small class="header__subtitle">Designer + Developer</small>
		</div>
	</div>
	<nav class="nav">
		<ul class="nav__list">
			<li><a class="nav__link" href="/">Home</a></li>
			<li><a class="nav__link" href="/apps">Apps</a></li>
			<li><a class="nav__link" href="/projects">Projects</a></li>
		</ul>
	</nav>
</header>
<style>
	.header {
		padding-inline: var(--bleed);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: var(--size-3);
	}

	.header__leading {
		display: flex;
		gap: var(--size-2);
		margin-inline-end: auto;
	}

	.header__avatar {
		align-self: center;
		inline-size: var(--size-7);
		block-size: auto;
		object-fit: contain;
		background: var(--gradient-22);
		border-radius: var(--radius-round);
	}

	.header__name, .header__name:visited {
		text-decoration: none;
		color: var(--text-1);
		font-weight: var(--bold);
	}

	.header__name, .header_subtitle {
		display: block;
	}

	.nav__list {
		display: flex;
		flex-wrap: wrap;
		gap: var(--size-3);
	}

	.nav__link, .nav__link:visited {
		color: var(--text-2);
		text-decoration: none;
	}

</style>
