---
import Root, { type Props as RootProps } from "./Root.astro";
import "../styles/layouts/_page.scss";

interface Props extends RootProps {}
---

<Root {...Astro.props}>
  {
    Astro.props.pageTitle && (
      <div class="page__title">
        <h1 class="body">{Astro.props.pageTitle}</h1>
      </div>
    )
  }
  <slot />
</Root>
