---
import { CollectionEntry, getCollection } from "astro:content";
import AppPage from "../../../layouts/AppPage.astro";
import { getEntry } from "astro:content";

export async function getStaticPaths() {
  const collection = await getCollection("help");
  return collection.map((entry) => ({
    params: { app: entry.slug },
    props: { entry },
  }));
}

const entry: CollectionEntry<"help"> = Astro.props.entry;
const { Content } = await entry.render();

const {
  data: {
    app: { slug: appSlug },
  },
} = entry;

const appEntry = await getEntry("apps", appSlug);
const pageTitleSuffix = 'Help';
---

<AppPage pageTitleSuffix={pageTitleSuffix} appSlug={appSlug} appEntry={appEntry}>
  <div class="content-help">
    <h1>{appEntry.data.title}: {pageTitleSuffix}</h1>
    <Content />
  </div>
</AppPage>
